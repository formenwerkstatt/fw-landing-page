{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/Hero/InteractiveBanner.tsx",
    "src/components/Hero/ThreeFiber.tsx",
    "src/app/[locale]/admin/mockData.js",
    "src/app/actions/index.ts",
    "src/lib/shopify.ts",
    "src/app/actions/shopify-actions.ts",
    "src/data/useHomeArticle.ts"
  ],
  "exclude": ["node_modules"]
}
